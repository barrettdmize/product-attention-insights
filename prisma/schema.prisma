// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

enum ProductInsightStatus {
  HEALTHY
  NEGLECTED
  RECENTLY_UPDATED
}

model ProductInsight {
  id                 String               @id @default(cuid())
  shop               String
  productId          String               // Shopify Product GID (ex: "gid://shopify/Product/123")
  productTitle       String
  attentionScore     Int
  status             ProductInsightStatus
  recommendation     String
  reasonsJson        String?              // optional: store JSON string like ["updated 47 days ago", ...]
  lastProductUpdatedAt DateTime
  lastEvaluatedAt    DateTime             @default(now())
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt

  // Signal quality (read-only from Admin API)
  productStatus      String?             // ACTIVE | DRAFT | ARCHIVED
  hasFeaturedImage   Boolean?
  inventoryStatus    String?             // OUT_OF_STOCK | LOW | OK | UNKNOWN
  inventoryAvailable Int?
  confidenceExplanation String?           // e.g. "Low confidence: missing inventory and image data."

  // AI-generated explanation (advisory only; no product writes)
  aiExplanation      String?
  aiActionType       String?              // IMAGERY | PRICING | COPY | MERCHANDISING | SEO | INVENTORY
  aiConfidence       String?             // Insight confidence: High | Medium | Low
  aiGeneratedAt      DateTime?
  aiModel            String?
  aiStatus           String?             // IDLE | QUEUED | RUNNING | SUCCEEDED | FAILED
  aiError            String?

  @@unique([shop, productId])
  @@index([shop])
}

enum InsightJobStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

model InsightJob {
  id          String           @id @default(cuid())
  shop        String
  productId   String
  runId       String?
  run         Run?             @relation(fields: [runId], references: [id])
  status      InsightJobStatus @default(QUEUED)
  attempts    Int              @default(0)
  lastError   String?
  nextRetryAt DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([shop, status])
  @@index([runId])
}

enum RunStatus {
  RUNNING
  COMPLETED
  FAILED
}

model Run {
  id             String     @id @default(cuid())
  shop           String
  status         RunStatus  @default(RUNNING)
  productsQueued Int       @default(0)
  succeeded      Int       @default(0)
  failed         Int       @default(0)
  createdAt      DateTime  @default(now())
  completedAt    DateTime?

  jobs InsightJob[]

  @@index([shop])
}

model WebhookEvent {
  id         String   @id @default(cuid())
  webhookId  String   @unique
  topic      String
  shop       String
  receivedAt DateTime @default(now())

  @@index([shop])
}
